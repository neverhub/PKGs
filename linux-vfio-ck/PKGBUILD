#use 1000HZ kernel tick rate
_1k_HZ_ticks=y
#use -O3
_insane_optimization=y
#enable CK patchset
_CK=


pkgbase=linux-vfio-ck
_srcname=linux-4.13
pkgver=4.13.7
pkgrel=1
_ckpatchversion=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc' 'libelf')
options=('!strip')
_ckpatchname="patch-4.13-ck${_ckpatchversion}"
_gcc_patch="enable_additional_cpu_optimizations_for_gcc_v4.9+_kernel_v4.13+.patch"
source=("https://www.kernel.org/pub/linux/kernel/v4.x/${_srcname}.tar.xz"
"https://www.kernel.org/pub/linux/kernel/v4.x/${_srcname}.tar.sign"
"https://www.kernel.org/pub/linux/kernel/v4.x/patch-${pkgver}.xz"
"https://www.kernel.org/pub/linux/kernel/v4.x/patch-${pkgver}.sign"
"http://ck.kolivas.org/patches/4.0/4.13/4.13-ck${_ckpatchversion}/${_ckpatchname}.xz"
"http://ck.kolivas.org/patches/4.0/4.13/4.13-ck1/patches/0015-Enable-and-make-BFQ-default-IO-scheduler-overriding-.patch"
# the main kernel config files
'config.i686' 'config.x86_64'
'90-linux.hook'
# standard config files for mkinitcpio ramdisk
'linux.preset'
"https://github.com/graysky2/kernel_gcc_patch/raw/master/${_gcc_patch}"
'0001-pci-Enable-overrides-for-missing-ACS-capabilities-4..patch'
'0001-i915-Add-module-option-to-support-VGA-arbiter-on-HD-.patch')
sha256sums=('2db3d6066c3ad93eb25b973a3d2951e022a7e975ee2fa7cbe5bddf84d9a49a2c'
            'SKIP'
            '0fe89c96e956efbded576214eef0c8e43cabe41dfca245e3ebb79fff9bc8715d'
